{
  "name": "quran-apps-directory",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "dev": "ng serve --proxy-config proxy.conf.json",
    "build": "node generate-sitemap.js && ng build",
    "build:dev": "node generate-sitemap.js && ng build --configuration=development",
    "build:develop": "node generate-sitemap.js && ng build --configuration=develop && node compress-assets.js",
    "build:staging": "node generate-sitemap.js && ng build --configuration=staging && node compress-assets.js",
    "build:prod": "node generate-sitemap.js && ng build --configuration=production && node compress-assets.js",
    "analyze": "npx webpack-bundle-analyzer dist/stats.json",
    "lighthouse": "npx lighthouse http://localhost:4200 --output html --output-path ./lighthouse-report.html",
    "lighthouse:prod": "npx lighthouse https://quran-apps.itqan.dev --output html --output-path ./lighthouse-prod-report.html",
    "performance:test": "npm run build:prod && npx lighthouse https://quran-apps.itqan.dev --output json --output-path ./performance-results.json",
    "serve:dev": "ng serve --configuration=development --proxy-config proxy.conf.json",
    "serve:staging": "ng serve --configuration=staging --proxy-config proxy.conf.json",
    "serve:prod": "ng serve --configuration=production --proxy-config proxy.conf.json",
    "deploy": "ng build && cp dist/demo/browser/* dist/demo/",
    "deploy:staging": "ng build --configuration=staging",
    "deploy:prod": "ng build --configuration=production",
    "generate-sitemap": "node generate-sitemap.js",
    "sitemap": "node generate-sitemap.js"
  },
  "dependencies": {
    "@angular/animations": "^20.3.15",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.15",
    "@angular/compiler": "^20.3.15",
    "@angular/core": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/platform-browser": "^20.3.15",
    "@angular/platform-browser-dynamic": "^20.3.15",
    "@angular/platform-server": "^20.3.15",
    "@angular/router": "^20.3.15",
    "@angular/service-worker": "^20.3.15",
    "@angular/ssr": "^20.3.12",
    "@ant-design/icons-angular": "^20.0.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "@sentry/angular": "^10.32.1",
    "@sentry/browser": "^10.32.1",
    "lucide-angular": "^0.562.0",
    "ng-zorro-antd": "^20.4.3",
    "rxjs": "^7.8.1",
    "swiper": "^11.2.4",
    "tslib": "^2.5.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.12",
    "@angular/cli": "^20.3.12",
    "@angular/compiler-cli": "^20.3.15",
    "@playwright/test": "^1.56.1",
    "typescript": "5.8"
  }
}
